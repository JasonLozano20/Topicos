<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AgendaPersonal_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AgendaPersonal_MAUI"
    xmlns:views="clr-namespace:AgendaPersonal_MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="AgendaPersonal_MAUI">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent Route="RegistroPage" ContentTemplate="{DataTemplate views:RegistroPage}" />
    <ShellContent Route="RecuperarContrasenaPage" ContentTemplate="{DataTemplate views:RecuperarContrasenaPage}" />


</Shell>
